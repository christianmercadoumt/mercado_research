journal = {European Journal of Forest Research},
keywords = {Blue-green water,Dendrochronology,Forest hydrology,Pinus halepensis,Transpiration},
number = {5},
pages = {879--894},
title = {{Hydrology-oriented (adaptive) silviculture in a semiarid pine plantation: How much can be modified the water cycle through forest management?}},
