file = {:C$\backslash$:/Users/cmerc/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Harvey, Donato, Turner - 2014 - Recent mountain pine beetle outbreaks, wildfire severity, and postfire tree regeneration in the US North.pdf:pdf},
