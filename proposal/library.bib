issn = {16124669},
journal = {European Journal of Forest Research},
keywords = {Density-growth relationship,Merchantable volume growth,Permanent plots,Stand density,Thinning},
number = {3},
pages = {193--205},
title = {{Stand density and growth of Norway spruce (Picea abies (L.) Karst.) and European beech (Fagus sylvatica L.): Evidence from long-term experimental plots}},
