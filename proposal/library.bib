journal = {Ecology},
keywords = {Artemisia tridentata,common garden,intraspecific variation,negative density dependence,neighborhood models,plant–plant interactions,polyploidy,spatially explicit models,species coexistence,stress-gradient hypothesis},
number = {0},
pages = {1--11},
title = {{Intraspecific variation mediates density dependence in a genetically diverse plant species}},
