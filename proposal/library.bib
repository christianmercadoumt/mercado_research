keywords = {Fagus sylvatica,Picea abies,Pinus sylvestris,forest fire,hydraulic failure,tree hydraulics,tree mortality,vulnerability to embolism},
number = {4},
pages = {1484--1493},
pmid = {29193122},
title = {{Post-fire effects in xylem hydraulics of Picea abies, Pinus sylvestris and Fagus sylvatica}},
