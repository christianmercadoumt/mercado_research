journal = {Forest Ecology and Management},
keywords = {Fire behavior and effects,Forest Vegetation Simulator (FVS) and FFE-FVS,Forest structure,Multi-criteria assessment,Pareto optimality},
pages = {40--52},
publisher = {Elsevier B.V.},
title = {{Assessing forest vegetation and fire simulation model performance after the Cold Springs wildfire, Washington USA}},
