journal = {Forest Ecology and Management},
keywords = {Deposition,Disturbance,Fuel accumulation,Fuel dynamics},
pages = {38--47},
title = {{Surface fuel changes after severe disturbances in northern Rocky Mountain ecosystems}},
url = {http://dx.doi.org/10.1016/j.foreco.2017.05.020},
volume = {400},
year = {2017}
}
@article{Bachelet2001,
