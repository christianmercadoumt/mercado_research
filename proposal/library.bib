keywords = {Ecological assessment,Ecosystem health,Ecosystem processes,Insect disturbance,Interior Columbia River basin,Pathogen disturbance,Succession processes,Vegetation vulnerability},
number = {PNW-GTR-454},
pages = {1--56},
title = {{Modeling change in potential landscape vulnerability to forest insect and pathogen disturbances: Methods for forested subwatersheds sampled in the midscale interior Columbia River basin assessment}},
