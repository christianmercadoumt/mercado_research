doi = {10.1139/x11-095},
file = {:C$\backslash$:/Users/cmerc/Documents/Grad{\_}School/RESEARCH/ResearchProposal/literature/Robinsonetal{\_}2011{\_}forestrymodelsGAMs.pdf:pdf},
