journal = {Agricultural and Forest Meteorology},
keywords = {Bark beetles,Disturbance,Evapotranspiration,MODIS,Mountain pine beetles,Water cycle},
pages = {78--91},
publisher = {Elsevier B.V.},
title = {{Persistence of MODIS evapotranspiration impacts from mountain pine beetle outbreaks in lodgepole pine forests, south-central rocky mountains}},
url = {http://dx.doi.org/10.1016/j.agrformet.2014.09.015},
