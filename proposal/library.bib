journal = {Ecological Modelling},
keywords = {Disturbance,Global change,Interactions,Landscape ecology,Landscape modeling,Scale},
pages = {33--47},
publisher = {Elsevier B.V.},
title = {{Representing climate, disturbance, and vegetation interactions in landscape models}},
