issn = {01480227},
journal = {Journal of Geophysical Research: Biogeosciences},
number = {2},
pages = {1--12},
title = {{Changing temperatures influence suitability for modeled mountain pine beetle (Dendroctonus ponderosae) outbreaks in the western United States}},
volume = {111},
year = {2006}
}
