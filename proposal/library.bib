doi = {10.1111/ecog.02205},
file = {:C$\backslash$:/Users/cmerc/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Young et al. - 2017 - Climatic thresholds shape northern high-latitude fire regimes and imply vulnerability to future climate change.pdf:pdf},
