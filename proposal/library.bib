file = {:C$\backslash$:/Users/cmerc/OneDrive/Documents/Grad{\_}School/FORS540{\_}Disturbance/week15/Schoennagel{\_}et{\_}al{\_}2017{\_}PNAS.pdf:pdf},
issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Forests,Policy,Resilience,Wildfire,Wildland-urban interface},
number = {18},
