keywords = {Climate,Cross-spectral,Drought,ENSO (El Ni{\~{n}}o/Southern Oscillation),Fire history,Pacific Decadal Oscillation,Pacific Northwest,Pinus ponderosa,SEA (superposed epoch analysis)},
