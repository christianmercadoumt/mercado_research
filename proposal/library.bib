doi = {10.1016/j.agrformet.2014.09.015},
file = {:C$\backslash$:/Users/cmerc/OneDrive/Documents/Grad{\_}School/FORS540{\_}Disturbance/termpaper/literature/1-s2.0-S0168192314002263-main.pdf:pdf},
