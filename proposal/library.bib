issn = {15729761},
journal = {Landscape Ecology},
keywords = {Climate change impacts,Disturbance modeling,Forest disturbance interactions,Ips typographus,Picea abies,Windthrow},
number = {7},
pages = {1485--1498},
publisher = {Springer Netherlands},
title = {{Climate change amplifies the interactions between wind and bark beetle disturbances in forest landscapes}},
