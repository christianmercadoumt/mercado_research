issn = {10916490},
journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Climate change,Medieval Climate Anomaly,Wildfire},
number = {43},
pages = {13261--13266},
pmid = {26438834},
title = {{Medieval warming initiated exceptionally large wildfire outbreaks in the Rocky Mountains}},
