keywords = {Competition,Density management,Growth and yield,Stand density,Stand dynamics},
number = {7},
pages = {861--874},
title = {{Long-term precommercial thinning effects on Larix occidentalis (western larch) tree and stand characteristics}},
volume = {47},
year = {2017}
}
