journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Conifer forest,Disturbance interactions,Fire ecology,Forest resilience,Serotiny},
number = {42},
pages = {15120--15125},
pmid = {25267633},
title = {{Recent mountain pine beetle outbreaks, wildfire severity, and postfire tree regeneration in the US Northern Rockies}},
